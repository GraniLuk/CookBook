{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/\\.html$/"
            ],
            "matchStrings": [
                "<script src=\"https://unpkg\\.com/(?<depName>[^@]+)@(?<currentValue>[^/]+)"
            ],
            "datasourceTemplate": "npm"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/\\.html$/"
            ],
            "matchStrings": [
                "<script src=['\"]https://cdn\\.jsdelivr\\.net/npm/(?<depName>[^@]+)@(?<currentValue>[^/]+)"
            ],
            "datasourceTemplate": "npm"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/\\.html$/"
            ],
            "matchStrings": [
                "<link rel=\"stylesheet\" href=\"https://cdnjs\\.cloudflare\\.com/ajax/libs/font-awesome/(?<currentValue>[^/]+)"
            ],
            "datasourceTemplate": "cdnjs",
            "depNameTemplate": "font-awesome"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/\\.github/workflows/.*\\.ya?ml$/"
            ],
            "matchStrings": [
                "HUGO_VERSION:\\s*(?<currentValue>[\\d.]+)"
            ],
            "depNameTemplate": "gohugoio/hugo",
            "datasourceTemplate": "github-releases"
        }
    ]
}
