{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "\\.html$"
            ],
            "matchStrings": [
                "<script src=\"https://unpkg\\.com/(?<depName>[^@]+)@(?<currentValue>[^/]+)"
            ],
            "datasourceTemplate": "npm"
        },
        {
            "customType": "regex",
            "fileMatch": [
                "\\.html$"
            ],
            "matchStrings": [
                "<script src=['\"]https://cdn\\.jsdelivr\\.net/npm/(?<depName>[^@]+)@(?<currentValue>[^/]+)"
            ],
            "datasourceTemplate": "npm"
        },
        {
            "customType": "regex",
            "fileMatch": [
                "\\.html$"
            ],
            "matchStrings": [
                "<link rel=\"stylesheet\" href=\"https://cdnjs\\.cloudflare\\.com/ajax/libs/font-awesome/(?<currentValue>[^/]+)"
            ],
            "datasourceTemplate": "cdnjs",
            "depNameTemplate": "font-awesome"
        }
    ]
}